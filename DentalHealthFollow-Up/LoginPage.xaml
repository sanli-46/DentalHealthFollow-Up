<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.LoginPage"
             Title="Giriş Yap">


    <StackLayout Padding="30" Spacing="15">
        <Label Text="E-Posta" />
        <Entry x:Name="emailEntry" Placeholder="example@mail.com" Keyboard="Email" />

        <Label Text="Şifre" />
        <Entry x:Name="passwordEntry" Placeholder="Şifrenizi girin" IsPassword="True" />

        <Button Text="Giriş Yap" Clicked="OnLoginClicked" />

        <Label Text="Hesabın yok mu?" HorizontalOptions="Center" />
        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
