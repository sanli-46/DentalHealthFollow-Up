<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DentalHealthFollow_Up.MAUI.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Giriş">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="E-posta" />
        <Entry x:Name="EmailEntry" Placeholder="eposta@ornek.com" Keyboard="Email" />

        <Label Text="Şifre" />
        <Entry x:Name="PasswordEntry" Placeholder="••••••" IsPassword="True" />

        <Button Text="Giriş Yap" Clicked="OnLoginClicked" />
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,12,0,0" Spacing="6">
            <Label Text="Hesabın yok mu?" VerticalOptions="Center" />
            <Label Text="Kaydol" TextDecorations="Underline" TextColor="{DynamicResource Primary}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGoRegisterTapped" NumberOfTapsRequired="1" />
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>

