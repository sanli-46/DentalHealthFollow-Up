<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="DentalHealthFollow_Up.MAUI.ProfilePage"
             Title="Profil Sayfası">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Ad Soyad" />
            <Entry x:Name="NameEntry" Placeholder="Ad Soyad" />

            <Label Text="E-posta" />
            <Entry x:Name="EmailEntry" Placeholder="ornek@mail.com" Keyboard="Email" />

            <Label Text="Doğum Tarihi" />
            <DatePicker x:Name="BirthDatePicker" MaximumDate="{x:Static sys:DateTime.Now}" />

            <Label Text="Yeni Parola" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Yeni Parola" />

            <Label Text="Yeni Parola Tekrar" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Yeni Parola Tekrar" />

            <CollectionView x:Name="RecordsCollectionView" Margin="0,10" />
            <Entry x:Name="DurationEntry" Keyboard="Numeric" Placeholder="Süre (dk)" />

            <Button Text="Bilgileri Güncelle" Clicked="OnUpdateClicked" />

            <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

