<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DentalHealthFollow_Up.MAUI.TipsPage"
    Title="Ağız ve Diş Sağlığı Önerileri">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Günün Önerisi"
                   FontAttributes="Bold"
                   FontSize="20" />

            <Frame Padding="16"
                   CornerRadius="14"
                   BorderColor="{DynamicResource Gray500}">
                <Label x:Name="tipLabel"
                       FontSize="16"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Start" />
            </Frame>

            <Label FontSize="12"
                   Text="* Öneri sayfası açıldığında otomatik olarak bir öneri yüklenir."
                   TextColor="{DynamicResource Gray600}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

