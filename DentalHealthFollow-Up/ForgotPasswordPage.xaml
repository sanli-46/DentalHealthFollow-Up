<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.MAUI.ForgotPasswordPage"
             Title="Parola Sıfırlama">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="E-posta Adresiniz" />
            <Entry x:Name="EmailEntry" Placeholder="mail@ornek.com" Keyboard="Email" />

            <Button Text="Doğrula" Clicked="OnVerifyClicked" />

            <StackLayout x:Name="NewPasswordLayout" IsVisible="False" Spacing="10">
                <Label Text="Yeni Parola" />
                <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Yeni Parola" />

                <Label Text="Yeni Parola Tekrar" />
                <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Yeni Parola Tekrar" />

                <Button Text="Parolayı Güncelle" Clicked="OnUpdatePasswordClicked" />
            </StackLayout>

            <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
