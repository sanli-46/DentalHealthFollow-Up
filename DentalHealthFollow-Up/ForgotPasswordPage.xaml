<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.MAUI.ForgotPasswordPage"
             Title="Şifremi Unuttum">
    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Kayıtlı e-mail adresinizi giriniz" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>

        <Button Text="E-maili Doğrula" Clicked="OnCheckEmailClicked"/>

        <StackLayout x:Name="ResetPanel" IsVisible="False" Spacing="10">
            <Entry x:Name="NewPasswordEntry" Placeholder="Yeni Şifre" IsPassword="True"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Yeni Şifre Tekrar" IsPassword="True"/>
            <Button Text="Şifreyi Güncelle" Clicked="OnResetPasswordClicked"/>
        </StackLayout>

        <Label x:Name="ResultLabel" TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>

