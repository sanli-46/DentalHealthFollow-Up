<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.MAUI.ForgotPasswordPage"
             Title="Şifre Sıfırlama">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="E-posta" />
        <Entry x:Name="EmailEntry" Placeholder="E-posta adresinizi girin" Keyboard="Email" />

        <Button Text="E-posta Doğrula" Clicked="OnVerifyClicked" />

        <StackLayout x:Name="NewPasswordLayout" IsVisible="False">
            <Label Text="Yeni Şifre" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Yeni şifre" />

            <Label Text="Şifre Tekrar" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Yeni şifre tekrar" />

            <Button Text="Şifreyi Güncelle" Clicked="OnUpdatePasswordClicked" />
        </StackLayout>

        <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>
