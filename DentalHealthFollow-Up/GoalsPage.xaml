<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DentalHealthFollow_Up.GoalsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hedefler">

    <StackLayout Padding="20" Spacing="15">

        <Label Text="Hedefleriniz"
               FontSize="22"
               HorizontalOptions="Center" />

        <CollectionView x:Name="goalsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                        <Label Text="{Binding Title}" FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Entry x:Name="newGoalEntry"
               Placeholder="Yeni hedef girin" />

        <Button Text="Hedef Ekle"
                Clicked="OnAddGoalClicked" />

    </StackLayout>

</ContentPage>
