<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DentalHealthFollow_Up.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DentalHealthFollow_Up.MAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Ana Sayfa" Route="main"
                      ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Durum" Route="status"
                      ContentTemplate="{DataTemplate pages:StatusPage}" />
        <ShellContent Title="Hedefler" Route="goals"
                      ContentTemplate="{DataTemplate pages:GoalEntryPage}" />
        <ShellContent Title="Profil" Route="profile"
                      ContentTemplate="{DataTemplate pages:ProfilePage}" />
    </TabBar>

</Shell>





