<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DentalHealthFollow_Up.MAUI"
    x:Class="DentalHealthFollow_Up.MAUI.AppShell"
    Shell.FlyoutBehavior="Disabled">

    
    <ShellContent Route="login"
                  ContentTemplate="{DataTemplate local:LoginPage}" />
    <ShellContent Route="register"
                  ContentTemplate="{DataTemplate local:RegisterPage}" />

   
    <TabBar Route="main">
        <ShellContent Route="home"    Title="Ana Sayfa" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Route="status"  Title="Durum"     ContentTemplate="{DataTemplate local:StatusPage}" />
        <ShellContent Route="goals"   Title="Hedefler"  ContentTemplate="{DataTemplate local:GoalEntryPage}" />
        <ShellContent Route="profile" Title="Profil"    ContentTemplate="{DataTemplate local:ProfilePage}" />
    </TabBar>
</Shell>





