<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DentalHealthFollow_Up.MAUI"
    x:Class="DentalHealthFollow_Up.MAUI.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Title="DentalHealthFollow_Up">

    <ShellContent
        Title="Giriş"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Kayıt"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Profil"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />

    <ShellContent
        Title="Hedefler"
        ContentTemplate="{DataTemplate local:GoalsPage}"
        Route="GoalsPage" />

    <ShellContent
    Title="Parolamı Unuttum"
    ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
    Route="ForgotPasswordPage" />

</Shell>
