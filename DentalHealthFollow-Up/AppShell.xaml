<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="DentalHealthFollow_Up.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DentalHealthFollow_Up.MAUI">

    
    <ShellContent Route="login"    ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />

    
    <TabBar Route="main">
        <Tab Title="Ana Sayfa" Icon="home.png">
            <ShellContent Route="home" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Hedefler" Icon="goals.png">
            <ShellContent Route="goals" ContentTemplate="{DataTemplate views:GoalsPage}" />
        </Tab>
        <Tab Title="Profil" Icon="profile.png">
            <ShellContent Route="profile" ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
