<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.MainPage"
             Title="Ana Sayfa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            <Label x:Name="welcomeLabel"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="DarkBlue"
                   />

            <Button Text="Profilim" Clicked="OnProfileClicked" />
            <Button Text="Takip Et" Clicked="OnTrackingClicked" />
            <Button Text="Hedeflerim" Clicked="OnGoalsClicked" />
            <Button Text="Öneri Al" Clicked="OnTipsClicked" />
            <Button Text="Çıkış Yap" Clicked="OnLogoutClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

