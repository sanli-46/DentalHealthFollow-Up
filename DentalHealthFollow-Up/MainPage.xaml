<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DentalHealthFollow_Up.MAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ana Sayfa">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">

            <!-- Kullanıcı adı belirgin -->
            <Label x:Name="WelcomeLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   Text="Hoş geldin!" />

            <!-- Hızlı erişim -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="Durum" Clicked="OnGoStatus"/>
                <Button Grid.Column="1" Text="Hedefler" Clicked="OnGoGoals"/>
                <Button Grid.Column="2" Text="Profil" Clicked="OnGoProfile"/>
            </Grid>

            <!-- Rastgele öneri -->
            <Frame Padding="12" HasShadow="True" CornerRadius="12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Günün Önerisi"
                           FontAttributes="Bold"
                           FontSize="18"/>
                    <Label x:Name="TipLabel"
                           FontSize="14"
                           LineBreakMode="WordWrap"
                           Text="..." />
                    <Button Text="Yeni Öneri Getir" Clicked="OnRefreshTip"/>
                </VerticalStackLayout>
            </Frame>

       
            <Label Text="Son 7 Gün Özeti" FontAttributes="Bold" FontSize="18" />
            <CollectionView x:Name="SummaryList" EmptyView="Son 7 güne ait veri bulunamadı.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,6" CornerRadius="10">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding TitleDisplay}" FontAttributes="Bold"/>
                                <Label Text="{Binding DateDisplay}"/>
                                <Label Text="{Binding DurationDisplay}"/>
                                <Label Text="{Binding NoteDisplay}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Güvenli Çıkış" Clicked="OnLogout" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>



