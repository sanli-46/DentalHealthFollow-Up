<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.MAUI.MainPage"
             Title="Ana Sayfa">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="welcomeLabel" FontAttributes="Bold" FontSize="20" />

        <Button Text="Profil"   Clicked="OnProfileClicked" />
        <Button Text="Takip"    Clicked="OnTrackingClicked" />
        <Button Text="Hedefler" Clicked="OnGoalsClicked" />
        <Button Text="Öneriler" Clicked="OnTipsClicked" />
        <Button Text="Çıkış"    Clicked="OnLogoutClicked" />
    </VerticalStackLayout>
</ContentPage>

