<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalHealthFollow_Up.TrackingPage"
             Title="Takip Ekranı">

    <VerticalStackLayout Padding="20">

        <Label Text="Takip Notu Girin:" FontAttributes="Bold" />
        <Editor x:Name="trackingNoteEntry" HeightRequest="100" Placeholder="Bugünkü ilerlemeni yaz..." />

        <Button Text="Kaydet" Clicked="OnSaveTrackingClicked" Margin="0,10,0,20"/>

        <Label Text="Kayıtlar:" FontAttributes="Bold" />
        <CollectionView x:Name="trackingCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="Gray">
                        <Label Text="{Binding Note}" FontSize="14" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
